generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String
  seats     Json
  trip      Trip     @relation(fields: [tripId], references: [id])
  tripId    Int
  createdAt DateTime @default(now())
}

model Trip {
  id         Int      @id @default(autoincrement())
  routeId    Int
  companyId  Int
  departure  DateTime
  arrival    DateTime
  seatsTotal Int

  route        Route         @relation(fields: [routeId], references: [id])
  company      Company       @relation(fields: [companyId], references: [id])
  reservations Reservation[]

  // Add unique constraint on companyId + departure to avoid duplicate trips
  @@unique([companyId, departure])
}

model Route {
  id       Int  @id @default(autoincrement())
  fromId   Int
  toId     Int
  from     City @relation("FromCity", fields: [fromId], references: [id])
  to       City @relation("ToCity", fields: [toId], references: [id])
  distance Int? // km, optional
  duration Int? // minutes, optional

  trips    Trip[]
  Schedule Schedule[]

  @@unique([fromId, toId])
}

model City {
  id   Int    @id @default(autoincrement())
  name String @unique

  fromRoutes Route[] @relation("FromCity")
  toRoutes   Route[] @relation("ToCity")
}

model Company {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  trips    Trip[]
  Schedule Schedule[]
}

enum Weekday {
  Sunday
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
}

model Schedule {
  id         Int     @id @default(autoincrement())
  companyId  Int
  routeId    Int
  weekday    Weekday
  time       String // "HH:mm" format, e.g. "08:00"
  seatsTotal Int

  company Company @relation(fields: [companyId], references: [id])
  route   Route   @relation(fields: [routeId], references: [id])
}
